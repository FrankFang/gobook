{
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "eslint.quiet": true,
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "json5"
  ],
  "prettier.enable": false,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.fixAll.eslint": true, // this allows ESLint to auto fix on save
    "source.organizeImports": false
  },
  "cSpell.words": [
    "gobook"
  ],
  "sqltools.connections": [
    {
      "previewLimit": 50,
      "driver": "SQLite",
      "name": "book1",
      "database": "${workspaceFolder:gobook}/gobook_data/6b5dc138-5d60-4610-9250-98da24341e76.db"
    },
    {
      "previewLimit": 50,
      "driver": "SQLite",
      "name": "book2",
      "database": "${workspaceFolder:gobook}/gobook_data/388dc0ca-ff3f-4533-aaef-829d0934d830.db"
    }
  ],
  "errorLens.enabledDiagnosticLevels": [
    "warning",
    "error"
  ],
  "errorLens.excludeBySource": [
    "cSpell",
    "Grammarly",
    "eslint"
  ]
}
